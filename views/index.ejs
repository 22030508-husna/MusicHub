<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MusicHub</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">MusicHub</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/addSong">Add New Song</a>
                    </li> 
                </ul>
            </div>
        </div>
    </nav>
    <div class="container mt-4">
        <div class="text-center mb-4">
            <h2>MusicHub Songs</h2>
        </div>
        <div class="row">
            <% songs.forEach(song => { %>
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title"><%= song.title %></h5>
                        <p class="card-text">Artist: <%= song.artist %></p>
                        <p class="card-text">Album: <%= song.album %></p>
                        <p class="card-text">Genre: <%= song.genre %></p>
                        <p class="card-text">Comment: <%= song.comment %></p>
                        <a href="/song/<%= song.songId %>" class="btn btn-primary">View</a>
                        <a href="/editSong/<%= song.songId %>" class="btn btn-warning">Edit</a>
                        <a href="/deleteSong/<%= song.songId %>" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this song?')">Delete</a>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
</body>
</html>
